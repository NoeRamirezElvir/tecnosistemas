@model UsuarioVm

@{
    ViewData["Title"] = "Registro";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}



<div class="form-container">

    <div>
        <h2>Registro</h2>

        <form asp-action="Registro" method="post">
            @if (TempData["mensaje"] != null)
                {
                    
                    <div class="alert" id="alerta">
                         @TempData["mensaje"]
                    </div>
                }
            <div class="form-column">
                <div>
                    <label asp-for="Nombre"></label>
                    <input asp-for="Nombre" class="form-control" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>

                <div>
                    <label asp-for="apellido"></label>
                    <input asp-for="apellido" class="form-control" />
                    <span asp-validation-for="apellido" class="text-danger"></span>
                </div>

                <div>
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div>
                    <label asp-for="direccion"></label>
                    <input asp-for="direccion" class="form-control" />
                    <span asp-validation-for="direccion" class="text-danger"></span>
                </div>
            </div>

            <div class="form-column">
                <div>
                    <label asp-for="DNI"></label>
                    <input asp-for="DNI" class="form-control" />
                    <span asp-validation-for="DNI" class="text-danger"></span>
                </div>

                <div>
                    <label asp-for="fechaNacimiento"></label>
                    <input type="date" asp-for="fechaNacimiento" class="form-control" />
                    <span asp-validation-for="fechaNacimiento" class="text-danger"></span>
                </div>

                <div>
                    <label asp-for="Password"></label>
                    <input type="password" asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div>
                    <label asp-for="telefono"></label>
                    <input asp-for="telefono" class="form-control" />
                    <span asp-validation-for="telefono" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="Id" nam class="control-label">Rol</label>
                    @Html.DropDownList("RolId", Model.Roles, "Seleccione un rol", new { @class = "form-control" })
                </div>
                
                   

                <!-- Agrega los demás campos aquí -->
                <!-- Botones fuera del contenedor .form-container -->

                <div class="button-container">
                    
                    <a href="@Url.Action("Index")" class="btn btn-secondary">Volver a Inicio</a>
                    
                        <button type="submit" class="btn btn-success">Guardar Datos</button>
                    
                </div>
                
            </form>
        </div>
    </div
</div>