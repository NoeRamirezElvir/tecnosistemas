@using Microsoft.CodeAnalysis.Differencing
@model TECNOSISTEMAS.Models.UsuarioVm

@{
    ViewData["Title"] = "Registro";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<head>
    <link rel="stylesheet" href="~/css/StyleSheet.css" /> <!-- Ajusta la ruta según la ubicación real de tu archivo CSS -->
</head>

<div class="form-container">
    <div>
        <h2>Registro</h2>

        <form asp-action="GuardarUsuario" method="post">
            <div class="form-column">
                <div>
                    <label asp-for="Nombre"></label>
                    <input asp-for="Nombre" class="form-control" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>

                <div>
                    <label asp-for="apellido"></label>
                    <input asp-for="apellido" class="form-control" />
                    <span asp-validation-for="apellido" class="text-danger"></span>
                </div>

                <div>
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div>
                    <label asp-for="direccion"></label>
                    <input asp-for="direccion" class="form-control" />
                    <span asp-validation-for="direccion" class="text-danger"></span>
                </div>
            </div>

            <div class="form-column">
                <div>
                    <label asp-for="DNI"></label>
                    <input asp-for="DNI" class="form-control" />
                    <span asp-validation-for="DNI" class="text-danger"></span>
                </div>

                <div>
                    <label asp-for="fechaNacimiento"></label>
                    <input type="date" asp-for="fechaNacimiento" class="form-control" />
                    <span asp-validation-for="fechaNacimiento" class="text-danger"></span>
                </div>

                <div>
                    <label asp-for="Password"></label>
                    <input type="password" asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div>
                    <label asp-for="telefono"></label>
                    <input asp-for="telefono" class="form-control" />
                    <span asp-validation-for="telefono" class="text-danger"></span>
                </div>

                <div class="form-column">
                    <div class="select-wrapper">
                        <!-- Aplica la clase select-wrapper aquí -->
                        <label asp-for="Rol"></label>
                        <select asp-for="Rol" class="form-control">
                            <option value="Administrador">Administrador</option>
                            <option value="Moderador">Moderador</option>
                            <option value="Usuario regular">Usuario regular</option>
                            <option value="Cliente">Cliente</option>
                            <option value="Invitado">Invitado</option>
                            <option value="Editor">Editor</option>
                            <option value="Analista">Analista</option>
                            <option value="Soporte técnico">Soporte técnico</option>
                            <option value="Instructor">Instructor</option>
                            <option value="Desarrollador">Desarrollador</option>
                        </select>
                    </div>
                    <span asp-validation-for="Rol" class="text-danger"></span>
                </div>

                <!-- Agrega los demás campos aquí -->
                <!-- Botones fuera del contenedor .form-container -->
                <div class="button-container">
                    <!-- Botones -->
                    <a href="@Url.Action("Index")" class="btn btn-secondary">Volver a Inicio</a>
                    <button type="submit" form="guardarUsuarioForm" class="btn btn-primary">Guardar Usuario</button>
                </div>
            </form>
        </div>
    </div
</div>
