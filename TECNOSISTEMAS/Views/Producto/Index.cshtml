@model List<ProductoVm>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!--NUEVAS VISTAS-->
<form asp-action="BuscarProducto" method="get">
    <input type="submit" value="Buscar Nombre" class="btn-success" />
</form>

<form asp-action="Insertar" method="get">
    <div class="row">
        <div class="danger">
            @if (TempData["mensaje"] != null)
            {
                <div class="alert alert-warning alert-dismissible fade show" role="alert">
                    <p> @TempData["mensaje"]</p>
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            }
        </div>
    </div>
    <div class="form-group">
        <input type="submit" value="Agregar" class="btn-success" />
    </div>
    @if (Model.Count > 0)
    {
        <div class="ScrollB">
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Nombre</th>
                        <th>Precio</th>
                        <th>Costo</th>
                        <th>Categoria</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Nombre</td>
                            <td>@item.Precio</td>
                            <td>@item.Costo</td>
                            <td>@item.Categoria.Nombre</td>
                            <td>
                                @Html.ActionLink("Editar", "Editar", "Producto", new { @ProductoId = item.Id }, new { @class = "btn btn-info" })
                                @Html.ActionLink("Eliminar", "Eliminar", "Producto", new { @ProductoId = item.Id }, new { @class = "btn btn-info" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <br />
    }
</form>
