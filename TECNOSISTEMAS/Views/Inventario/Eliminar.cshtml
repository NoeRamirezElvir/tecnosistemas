@model InventarioVm
@{
    ViewData["Title"] = "Eliminar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <link rel="stylesheet" href="~/css/frmp_acciones.css" />
</head>
<div class="acciones-container">
    <div class="tittle"><h1>Eliminar Inventario</h1></div>
    <div class="form-container-acciones">
    <form asp-action="Eliminar" method="post">
        <input asp-for="Id" type="hidden" class="form-control" />
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Producto.Nombre" class="control-label"></label>
                    <input asp-for="Producto.Nombre" class="form-control" readonly />
                    <span asp-validation-for="Producto.Nombre" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="StockActual" class="control-label">Stock Actual</label>
                    <input asp-for="StockActual" class="form-control" readonly/>
                    <span asp-validation-for="StockActual" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="StockMinimo" class="control-label">Stock Mínimo</label>
                    <input asp-for="StockMinimo" class="form-control" readonly/>
                    <span asp-validation-for="StockMinimo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="StockMaximo" class="control-label">Stock Máximo</label>
                    <input asp-for="StockMaximo" class="form-control" readonly/>
                    <span asp-validation-for="StockMaximo" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Eliminar" class="btn btn-success" />
            </div>
        </div>
    </form>
    </div>
</div>
<!--MODAL-->
<div class="modal" id="mensajeModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body">
                @TempData["mensaje"]
            </div>
        </div>
    </div>
</div>
@section scripts {
    <script>
        $(document).ready(function () {
            var mensaje = '@TempData["mensaje"]';
            if (mensaje !== "") {
                $("#mensajeModal").modal("show");
                setTimeout(function () {
                    $("#mensajeModal").modal("hide");
                }, 3000);
            }
        });
    </script>
}


